	public static List<PartyNationality> mapToNationalities(List<LegalStatus> legalStatuses) {
		log.info("mapToNationalities()");
		List<PartyNationality> nationalities = new ArrayList<>();
		if (legalStatuses == null)
			return null;
		int index = 1;
		for (LegalStatus legalStatus : legalStatuses) {
			if (!ObjectUtils.isEmpty(legalStatus)) {
				PartyNationality nationality = new PartyNationality();
				nationality.setIndex(index++);
				// Assuming `id` in `LegalStatus` maps to `index` in `PartyNationality`
				nationality.set_country(legalStatus.getCountry());
				checkLegalStatusesUsageIsP(legalStatus, nationality);
				nationality.setIdentificationNumber(legalStatus.getIdentificationNumber());
				nationalities.add(nationality);
			}
		}
		log.info("/mapToNationalities()");
		return nationalities;
	}
