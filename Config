	public void checkHeaderNulls(Map<String, String> headers) {
		Assert.notNull(headers.get(MdmHeaderRequest.USER), "user header is null");
		Assert.notNull(headers.get(MdmHeaderRequest.INPUT_COUNTRY), "input country header is null");
		Assert.notNull(headers.get(MdmHeaderRequest.REQUEST_CHANNEL), "request channel header is null");
		Assert.notNull(headers.get(MdmHeaderRequest.REQUEST_LANGUAGE), "language header is null");
		Assert.notNull(headers.get(MdmHeaderRequest.REQUEST_REFERENCE), "channel reference header is null");
	}
