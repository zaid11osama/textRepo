@Test
void testGetExcelTasks_NoTasksFound() {
    when(taskRepository.getCheckerTasksFilteredList(any())).thenReturn(Collections.emptyList());

    ServiceNotFoundException ex = assertThrows(ServiceNotFoundException.class, () -> {
        checkerService.getExcelTasks("someFilter", "someColumn");
    });

    assertEquals("No tasks found for the given filter: someFilter", ex.getMessage());
}
