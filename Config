	public Relationship getRelationshipsByGlobalIdAndCustomerId(String identifier, String inputCountry, String role) {
		log.debug("getGlobalIdByCustomerId({})", identifier);
		try {
			return role == null || role.isBlank()
					? goldenRelationshipRepository.getGlobalIdByRelatedProductAndRelationCountryAndAhRole(identifier, inputCountry)
					: goldenRelationshipRepository.getGlobalIdByRelatedProductAndRelationCountryAndRole(identifier, inputCountry, role);
		} finally {
			log.debug("/getGlobalIdByCustomerId({})", identifier);
		}
	}
