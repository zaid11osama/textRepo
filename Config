	public void updateCustomer(MainModel mainModel) throws Exception {
		try {
			log.info("updateCustomer()");
			String url = getBrainBaseUrl() + "/brain/update-customer";
			HttpEntity<MainModel> entity = new HttpEntity<>(mainModel, new HttpHeaders());
			ResponseEntity<ResponseModel> response = restTemplate.exchange(url, HttpMethod.POST, entity,
					ResponseModel.class);
			checkResponse(response);
		} finally {
			log.info("/updateCustomer()");
		}
	}
