	@GetMapping("/{identifier}")
	public ResponseEntity<?> getFullDetails(

			@PathVariable("identifier") String identifier,
			@RequestHeader(value = IDENTIFIER_TYPE, defaultValue = "customerid") String identifierType,
			@RequestHeader(value = ROLE, required = false) String role,
			@RequestHeader(value = WITH_CUSTOMER_ID, required = false) String withCustomerId,
			@RequestHeader(value = USER, required = false) String user,
			@RequestHeader Map<String, String> headers)
			throws IOException, SQLException {

		headers.put(IDENTIFIER_TYPE, identifierType == null ? "customerid" : identifierType);
		headers.put(USER, user);
		headers.put(ROLE, role);
		headers.put(WITH_CUSTOMER_ID, withCustomerId);


		return new ResponseEntity<Object>(mainService.getFullDetails(identifier, headers), HttpStatus.OK);
	}
