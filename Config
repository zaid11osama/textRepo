@RequestMapping("/parties")
@Slf4j

public class PartyController {

	private final MainService mainService;

	/**
	 * @param newPartyModel
	 * @param headers
	 * @return customerResponse
	 * @throws Exception
	 */

	//@PreAuthorize("hasRole('CREATE_AB')")
	@PostMapping({"","/{identifier}"})
	public ResponseEntity<Object> createAbCustomer(@RequestBody NewPartyModel newPartyModel,
			@RequestHeader Map<String, String> headers, @PathVariable(required = false) String identifier) throws Exception {
		return new ResponseEntity<Object>(mainService.createAbCustomer(newPartyModel, headers, identifier), HttpStatus.CREATED);
	}
