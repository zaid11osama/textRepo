
@GetMapping("/get-transaction/{customerId}/{transactionReference}")
	public ResponseEntity<Object> CheckTransactionStatus(
			@PathVariable("transactionReference") String transactionReference,
			@PathVariable("customerId") String customerId, @RequestHeader Map<String, String> headers)
			throws Exception {
		return new ResponseEntity<Object>(mainService.getStatus(customerId, transactionReference, headers),
				HttpStatus.OK);
	}

