@Test
void testGetExcelTasks_IOException() throws Exception {
    List<Task> tasks = List.of(new Task()); 
    when(taskRepository.getCheckerTasksFilteredList(any())).thenReturn(tasks);

    try (MockedStatic<ExcelGenerator> mockedStatic = Mockito.mockStatic(ExcelGenerator.class)) {
        mockedStatic.when(() -> ExcelGenerator.generateExcel(anyList(), anyList(), any()))
                .thenThrow(new IOException("Excel write error"));

        RuntimeException ex = assertThrows(RuntimeException.class, () -> {
            checkerService.getExcelTasks("filter", "column");
        });

        assertEquals("error in generating excel", ex.getMessage());
    }
}
