public Optional<MdmLogCupTransaction> getStatus(String customerId, String transactionReference,
			Map<String, String> headers) throws JsonProcessingException, SQLException {
		log.info("getStatus()");
		String corporationId = generateReference();
		LogChannelEntity logChannel = dbLogger.logIntoDb(transactionReference + "/" + customerId, headers,
				corporationId, EndpointsName.GET_STATUS);

		try {
			Optional<MdmLogCupTransaction> response = partyService.getTransactionStatus(customerId,
					transactionReference, headers);
			dbLogger.updateLogChannelOutput(objectMapper.writeValueAsString(response), HttpStatus.OK.name(),
					HttpStatus.OK.value(), logChannel);
			if (response.isEmpty()) {
				throw new ResponseStatusException(HttpStatus.NO_CONTENT, "No content found for the given transaction.");
			}
			return response;
		} catch (Exception e) {
			log.error(e.getMessage());
			dbLogger.updateLogChannelOutput(e.getMessage(), HttpStatus.BAD_REQUEST.name(),
					HttpStatus.BAD_REQUEST.value(), logChannel);
			throw e;
		} finally {
			log.info("/getStatus()");
		}
	}
