package com.TestApi.start.config;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.stereotype.Component;

import java.util.List;
import java.util.Map;

@Component
@ConfigurationProperties(prefix = "api2")
public class Curl {

    private Curls curls;
    private Map<String, String> headers;

    public Curls getCurls() {
        return curls;
    }

    public void setCurls(Curls curls) {
        this.curls = curls;
    }

    public Map<String, String> getHeaders() {
        return headers;
    }

    public void setHeaders(Map<String, String> headers) {
        this.headers = headers;
    }

    public static class Curls {
        private List<String> get;
        private List<RequestBodyData> post;
        private List<RequestBodyData> put;
        private List<RequestBodyData> delete;

        public List<String> getGet() {
            return get;
        }

        public void setGet(List<String> get) {
            this.get = get;
        }

        public List<RequestBodyData> getPost() {
            return post;
        }

        public void setPost(List<RequestBodyData> post) {
            this.post = post;
        }

        public List<RequestBodyData> getPut() {
            return put;
        }

        public void setPut(List<RequestBodyData> put) {
            this.put = put;
        }

        public List<RequestBodyData> getDelete() {
            return delete;
        }

        public void setDelete(List<RequestBodyData> delete) {
            this.delete = delete;
        }
    }

    public static class RequestBodyData {
        private String url;
        private String body;

        public String getUrl() {
            return url;
        }

        public void setUrl(String url) {
            this.url = url;
        }

        public String getBody() {
            return body;
        }

        public void setBody(String body) {
            this.body = body;
        }
    }
}
