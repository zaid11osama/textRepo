

@Builder
public class LockCustomerDto {
	private String customerId;
	private String customerCountry;
	private String latestUniqueReference;
	private String updateProgram;
	private String requestCountry;
	private String requestChannel;
	private String requester;
}

public Integer lock(LockCustomerDto lockCustomerDto) {
		try {
			log.info("lock({})", lockCustomerDto);
			return lockedCustomerRepository.lockCustomer(lockCustomerDto, UUID.randomUUID().toString());
		} catch (RuntimeException ex) {
			log.error(ex.getMessage());
			throw new GoldenMDMException("unable to lock customer please try again");
		} finally {
			log.info("/lock({})", lockCustomerDto);
		}
	}



