@Test
void testGetTaskWithSubTasks_RuntimeException() {
    // Mock repository to throw RuntimeException
    when(taskRepository.getCheckerTask(any())).thenThrow(new RuntimeException("DB is down"));

    // Assert that the service wraps it into GoldenMDMException
    GoldenMDMException ex = assertThrows(GoldenMDMException.class, () -> {
        checkerService.getTaskWithSubTasks("taskId", 1, 10);
    });

    assertEquals("error getting tasks with subtask", ex.getMessage());
}
