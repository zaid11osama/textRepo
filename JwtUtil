@Test
void testGetTaskWithSubTasks_TaskNotFound() {
    // Mock repository to return empty
    when(taskRepository.getCheckerTask(any())).thenReturn(Optional.empty());

    // Call the service
    TaskSubTasksViewDto result = checkerService.getTaskWithSubTasks("nonexistentTaskId", 1, 10);

    // Assert that the result is an empty DTO
    assertNotNull(result);
    assertNull(result.getTask());
    assertNull(result.getSubTask());
}
