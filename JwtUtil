public class TranslationsService {

	private final JdbcTemplate jdbcTemplate;
	private final ObjectMapper objectMapper;
	private final LogsChannelRepository logsChannelRepository;
	private final MdmSysTranslationsRepository mdmSysTranslationsRepository;

	public static Map<String, List<MdmSysTranslations>> lookUpsMap = new HashMap<>();
	public static Map<String, MdmSysTranslations> translationsMap = new HashMap<>();
	private static final String UTILS_ENDPOINT = ": kyc/v1/lookups/";

	////////////////////////////////////////////////////



	////////////////////////////////////////////////////



	public String getTranslation(String fileKey, String filtrationKey3, String language, String code) {
		log.debug("getTranslation({} , {} , {} , {})", fileKey, filtrationKey3, language, code);
		try {
			MdmSysTranslations existFileKey = translationsMap.get(fileKey);
			if (existFileKey == null) {
				cacheTranslations(fileKey);
			}
			String key = concatTranslation(fileKey, filtrationKey3, language, code);
			MdmSysTranslations translation = translationsMap.get(key);
			if (translation != null) {
				return translation.getValue();
			}
			return "-";
		} finally {
			log.debug("/getTranslation({} , {} , {} , {})", fileKey, filtrationKey3, language, code);
		}
	}
